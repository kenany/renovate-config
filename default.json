{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableDependencyDashboard",
    ":semanticCommits",
    ":semanticCommitScope(deps)",
    ":label(deps)",
    ":rebaseStalePrs"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": null
  },
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "managers": [
        "github-actions"
      ],
      "extends": [
        ":semanticCommitScope(ci)",
        ":label(ci)"
      ]
    },
    {
      "datasources": [
        "npm"
      ],
      "commitMessageAction": null,
      "commitMessageExtra": null,
      "commitMessageTopic": "{{depName}}@{{{toVersion}}}"
    },
    {
      "description": "Disable major eslint and eslint-config updates since they almost always require manual intervention.",
      "matchPackageNames": ["eslint", "@kenan/eslint-config"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ]
}
